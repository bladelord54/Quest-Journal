/* Medieval Adventure Theme */
@import url('https://fonts.googleapis.com/css2?family=MedievalSharp&family=Cinzel:wght@400;600;700&family=Uncial+Antiqua&display=swap');

body {
    font-family: 'Cinzel', serif;
    background-image: 
        linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
        url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"><rect fill="%231c1917" width="100" height="100"/><path d="M0 0 L50 50 L0 100 L0 0 M100 0 L50 50 L100 100 L100 0" fill="%23292524" opacity="0.1"/></svg>');
    background-size: 100px 100px;
}

.medieval-title {
    font-family: 'Uncial Antiqua', cursive;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    letter-spacing: 2px;
}

.fancy-font {
    font-family: 'Cinzel', serif;
    letter-spacing: 1px;
}

/* Quest Card - Parchment Style */
.quest-card {
    position: relative;
    background-image:
        linear-gradient(to bottom, rgba(255,255,255,0.1) 0%, transparent 100%);
    box-shadow: 
        0 10px 30px rgba(0, 0, 0, 0.5),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
}

.quest-card::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #fbbf24, #f59e0b, #d97706, #b45309);
    border-radius: inherit;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s;
}

.quest-card:hover::before {
    opacity: 0.5;
}

/* Navigation Links */
.nav-link {
    position: relative;
    transition: all 0.3s ease;
}

.nav-link:hover {
    background: rgba(217, 119, 6, 0.2);
    border-left-color: #fbbf24;
    transform: translateX(5px);
}

.nav-link.active {
    background: rgba(217, 119, 6, 0.3);
    border-left-color: #fbbf24;
    box-shadow: inset 0 0 20px rgba(251, 191, 36, 0.2);
}

.nav-link.active::after {
    content: '⚔️';
    position: absolute;
    right: 20px;
    animation: pulse 2s infinite;
}

/* Custom Scrollbar - Medieval Style */
::-webkit-scrollbar {
    width: 12px;
    height: 12px;
}

::-webkit-scrollbar-track {
    background: #1c1917;
    border-left: 2px solid #78350f;
}

::-webkit-scrollbar-thumb {
    background: linear-gradient(to bottom, #b45309, #92400e);
    border: 2px solid #78350f;
    border-radius: 6px;
}

::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(to bottom, #d97706, #b45309);
}

/* Custom Checkbox - Shield Style */
input[type="checkbox"] {
    appearance: none;
    width: 28px;
    height: 28px;
    border: 3px solid #92400e;
    border-radius: 6px;
    background: linear-gradient(to bottom, #78350f, #451a03);
    cursor: pointer;
    position: relative;
    transition: all 0.3s ease;
    box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.5);
}

input[type="checkbox"]:hover {
    border-color: #d97706;
    box-shadow: 0 0 10px rgba(217, 119, 6, 0.5);
}

input[type="checkbox"]:checked {
    background: linear-gradient(to bottom, #fbbf24, #f59e0b);
    border-color: #fbbf24;
    box-shadow: 0 0 15px rgba(251, 191, 36, 0.8);
}

input[type="checkbox"]:checked::after {
    content: '⚔️';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 16px;
    animation: swordStrike 0.3s ease;
}

@keyframes swordStrike {
    0% { 
        transform: translate(-50%, -50%) scale(0) rotate(-45deg); 
        opacity: 0;
    }
    50% {
        transform: translate(-50%, -50%) scale(1.3) rotate(0deg);
    }
    100% { 
        transform: translate(-50%, -50%) scale(1) rotate(0deg); 
        opacity: 1;
    }
}

/* Animations */
@keyframes fadeIn {
    from { 
        opacity: 0; 
        transform: translateY(20px); 
    }
    to { 
        opacity: 1; 
        transform: translateY(0); 
    }
}

@keyframes slideIn {
    from { 
        opacity: 0; 
        transform: translateX(-30px); 
    }
    to { 
        opacity: 1; 
        transform: translateX(0); 
    }
}

@keyframes pulse {
    0%, 100% { 
        opacity: 1;
        transform: scale(1); 
    }
    50% { 
        opacity: 0.7;
        transform: scale(1.1); 
    }
}

@keyframes glow {
    0%, 100% {
        text-shadow: 0 0 10px rgba(251, 191, 36, 0.5);
    }
    50% {
        text-shadow: 0 0 20px rgba(251, 191, 36, 0.8), 0 0 30px rgba(251, 191, 36, 0.6);
    }
}

@keyframes bounce {
    0%, 100% {
        transform: translateY(0) scale(1);
    }
    25% {
        transform: translateY(-15px) scale(1.05);
    }
    50% {
        transform: translateY(0) scale(1);
    }
    75% {
        transform: translateY(-7px) scale(1.02);
    }
}

.view-container {
    animation: slideIn 0.5s ease-out;
}

/* Achievement Toast Animation */
#achievement-toast.scale-100 {
    animation: bounce 0.6s ease-in-out;
}

#achievement-toast {
    animation: glow 2s infinite;
}

/* Button Hover Effects */
button {
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

button:hover::before {
    width: 300px;
    height: 300px;
}

button:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
}

button:active {
    transform: translateY(0) scale(0.98);
}

/* Task/Goal Item Styles */
.task-item,
.goal-item {
    animation: fadeIn 0.4s ease-out forwards;
    transition: all 0.3s ease;
}

.task-item:hover,
.goal-item:hover {
    transform: translateX(5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

/* Parchment Effect for Content Cards */
.parchment {
    background: linear-gradient(to bottom, #f5deb3, #f4e4c1);
    border: 3px solid #8b7355;
    box-shadow: 
        0 0 0 1px #d2b48c,
        0 10px 30px rgba(0, 0, 0, 0.4);
    position: relative;
}

.parchment::before,
.parchment::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    background: #8b7355;
}

.parchment::before {
    top: -3px;
    left: -3px;
    border-radius: 0 0 5px 0;
}

.parchment::after {
    top: -3px;
    right: -3px;
    border-radius: 0 0 0 5px;
}

/* Progress Bar Enhancement */
#daily-progress {
    position: relative;
    box-shadow: 
        0 0 10px rgba(251, 191, 36, 0.6),
        inset 0 2px 5px rgba(0, 0, 0, 0.3);
}

#daily-progress::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, 
        rgba(255, 255, 255, 0.3) 0%, 
        rgba(255, 255, 255, 0) 50%, 
        rgba(0, 0, 0, 0.2) 100%);
    border-radius: inherit;
}

/* Decorative Elements */
.ornament {
    color: #d97706;
    font-size: 24px;
    animation: pulse 3s infinite;
}

/* Calendar Styles */
.calendar-day {
    min-height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.calendar-day.selected {
    background: linear-gradient(to bottom, #fbbf24, #f59e0b) !important;
    color: white !important;
    border: 3px solid #92400e !important;
    box-shadow: 0 0 15px rgba(251, 191, 36, 0.8);
    transform: scale(1.05);
}

.calendar-day.selected .text-amber-900 {
    color: white !important;
}

.calendar-day.selected .text-amber-800 {
    color: #fef3c7 !important;
}

/* Responsive Design */
@media (max-width: 768px) {
    .medieval-title {
        font-size: 1.5rem;
    }
    
    .fancy-font {
        font-size: 0.875rem;
    }
    
    button {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
    }
}
