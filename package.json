{
  "name": "life-quest-journal",
  "version": "1.0.0",
  "description": "Transform your life goals into epic quests. Track habits, earn rewards, and level up your life!",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "keywords": [
    "productivity",
    "goals",
    "tasks",
    "habits"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.lifequestjournal.app",
    "productName": "Life Quest Journal",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    }
  }
}
